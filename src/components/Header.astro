---
import { UserMenu } from "./UserMenu";
import { AuthButtons } from "./AuthButtons";

/**
 * Header aplikacji z warunkowym renderowaniem menu.
 *
 * Logika:
 * - Jeśli Astro.locals.user istnieje (user zalogowany) → UserMenu
 * - Jeśli Astro.locals.user NIE istnieje → AuthButtons (login/register)
 *
 * Nawigacja:
 * - "/" (Kalendarz) - dostępna dla wszystkich (middleware przekieruje niezalogowanych)
 * - "/goal" (Cel) - dostępna dla wszystkich (middleware przekieruje niezalogowanych)
 *
 * UWAGA: Astro.locals.user jest ustawiane przez middleware (src/middleware/index.ts)
 */

// Pobierz user z context.locals (ustawiony przez middleware)
const user = Astro.locals.user;
const isAuthenticated = !!user;
const userEmail = user?.email ?? null;
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      {/* Logo / nazwa aplikacji */}
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-primary">
          Training Planner
        </a>
      </div>

      {/* Nawigacja - tylko dla zalogowanych */}
      {isAuthenticated && (
        <nav class="hidden md:flex items-center gap-6">
          <a href="/" class="text-sm font-medium text-gray-700 hover:text-primary transition-colors">
            Kalendarz
          </a>
          <a href="/goal" class="text-sm font-medium text-gray-700 hover:text-primary transition-colors">
            Cel
          </a>
        </nav>
      )}

      {/* Warunkowe renderowanie: UserMenu (zalogowani) vs AuthButtons (niezalogowani) */}
      <div class="flex items-center">
        {isAuthenticated ? (
          <UserMenu client:load userEmail={userEmail} />
        ) : (
          <AuthButtons client:load />
        )}
      </div>
    </div>
  </div>
</header>
