---
import { UserMenu } from "./UserMenu";
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      {/* Logo / nazwa aplikacji */}
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-primary">
          Training Planner
        </a>
      </div>

      {/* Nawigacja (placeholder na przyszłość) */}
      <nav class="hidden md:flex items-center gap-6">
        <a href="/" class="text-sm font-medium text-gray-700 hover:text-primary transition-colors">
          Kalendarz
        </a>
        <a href="/goal" class="text-sm font-medium text-gray-700 hover:text-primary transition-colors">
          Cel
        </a>
      </nav>

      {/* Menu użytkownika */}
      <div class="flex items-center">
        <UserMenu client:load />
      </div>
    </div>
  </div>
</header>
